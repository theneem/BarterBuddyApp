<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/contnt_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

<TextView
        android:id="@+id/txtHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textAlignment="center"
android:textStyle="bold"
            android:textSize="@dimen/cast_libraries_material_featurehighlight_text_header_size"
            />


            <Button
                android:id="@+id/btnTemple"
                style="button_text"
                android:layout_width    ="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_kids"
                android:text=""
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnSaint"
                style="button_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_school"
                android:text=""
                android:textColor="#ffffff" />



            <Button
                android:id="@+id/btnEngineering"
                style="button_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_engineering"
                android:text="Saint"
                android:textColor="#ffffff" />


        </LinearLayout>

    </FrameLayout>

</LinearLayout>